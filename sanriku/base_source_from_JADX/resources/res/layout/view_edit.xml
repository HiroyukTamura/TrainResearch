            <EditText android:textStyle="bold" android:id="@+id/editName" android:layout_width="match_parent" android:layout_height="40dp" android:hint="@string/name" android:ems="10" android:inputType="text" android:layout_marginStart="53dp" app:layout_constraintBottom_toBottomOf="0" app:layout_constraintEnd_toEndOf="0" app:layout_constraintStart_toStartOf="0" app:layout_constraintTop_toTopOf="0"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout android:background="@drawable/button_select" android:layout_width="match_parent" android:layout_height="40dp" android:layout_marginBottom="13dp">
            <ImageView android:layout_gravity="center_horizontal" android:layout_width="40dp" android:layout_height="40dp" android:src="@mipmap/height" android:scaleType="centerCrop" android:contentDescription="@string/default_zero" app:layout_constraintLeft_toLeftOf="0" app:layout_constraintTop_toTopOf="0" app:srcCompat="@mipmap/height"/>
            <TextView android:textSize="18sp" android:textStyle="bold" android:textColor="@color/black" android:gravity="center_vertical" android:id="@+id/editHeight" android:layout_width="match_parent" android:layout_height="match_parent" android:hint="@string/height" android:layout_marginStart="53dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout android:background="@drawable/button_select" android:layout_width="match_parent" android:layout_height="40dp" android:layout_marginBottom="13dp">
            <ImageView android:layout_gravity="center_horizontal" android:layout_width="40dp" android:layout_height="40dp" android:src="@mipmap/weight" android:scaleType="centerCrop" android:contentDescription="@string/default_zero" app:layout_constraintLeft_toLeftOf="0" app:layout_constraintTop_toTopOf="0" app:srcCompat="@mipmap/weight"/>
            <TextView android:textSize="18sp" android:textStyle="bold" android:textColor="@color/black" android:gravity="center_vertical" android:id="@+id/editWeight" android:layout_width="match_parent" android:layout_height="match_parent" android:hint="@string/weight" android:layout_marginStart="53dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout android:background="@drawable/button_select" android:layout_width="match_parent" android:layout_height="40dp" android:layout_marginBottom="13dp">
            <ImageView android:layout_gravity="center_horizontal" android:layout_width="40dp" android:layout_height="40dp" android:src="@mipmap/birth" android:scaleType="centerCrop" android:contentDescription="@string/default_zero" app:layout_constraintLeft_toLeftOf="0" app:layout_constraintTop_toTopOf="0" app:srcCompat="@mipmap/birth"/>
            <TextView android:textSize="18sp" android:textStyle="bold" android:textColor="@color/black" android:gravity="center_vertical" android:id="@+id/editBirthday" android:layout_width="match_parent" android:layout_height="match_parent" android:hint="@string/birthday" android:layout_marginStart="53dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout android:background="@drawable/button_select" android:layout_width="match_parent" android:layout_height="40dp" android:layout_marginBottom="13dp">
            <ImageView android:layout_gravity="center_horizontal" android:layout_width="40dp" android:layout_height="40dp" android:src="@mipmap/gender" android:scaleType="centerCrop" android:contentDescription="@string/default_zero" app:layout_constraintLeft_toLeftOf="0" app:layout_constraintTop_toTopOf="0" app:srcCompat="@mipmap/gender"/>
            <TextView android:textSize="18sp" android:textStyle="bold" android:textColor="@color/black" android:gravity="center_vertical" android:id="@+id/editGender" android:layout_width="match_parent" android:layout_height="match_parent" android:hint="@string/gender" android:layout_marginStart="53dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <Button android:enabled="true" android:textColor="@drawable/text_style" android:id="@+id/editButton" android:background="@drawable/button_main" android:layout_width="match_parent" android:layout_height="40dp" android:layout_marginBottom="13dp" android:text="@string/profile_complete" style="?android:attr/borderlessButtonStyle"/>
